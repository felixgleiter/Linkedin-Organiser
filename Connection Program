# Data Lists for Companies, Positions etc.

empty = {}
blattler = {'Daniel ' : 'Blattler', 'Nathalie ' : 'Breuer', 'Mrinal ' : 'Madina', 'David ' : 'Brown', 'Stephan ' : 'Hammes', 'Nina ' : 'Schu', 'David ' : 'Keene'}
Companies = [blattler]
director = {'Daniel ' : 'Blattler'}
project_manager = {'Nathalie ' : 'Breuer', 'Nina ' : 'Schu'}
client_relations = {'David ' : 'Keene', 'David ' : 'Brown'} #Two identical keys means only one value is returned!
Positions = [director, project_manager, client_relations]
  
# Basic Query for the SQL table

def Query():
  
  print "Hello! Please type 'empty' where any value is unknown."
  
  Company = raw_input("Company: ").lower()
  
  for c in Companies:
    
    if eval(Company) == c: 
      Position = raw_input("Position: ").lower()
      
      for p in Positions:
        
        if eval(Position) == p:
          Surname = raw_input("Surname: ").lower()
      
          for key in c and p:
      
            if Surname == c[key].lower():
              print key + c[key]
            
            elif Surname == "":
              print key + c[key]

        elif eval(Position) == empty: 
          Surname = raw_input("Surname: ").lower()
      
          for key in c:
        
            if Surname == c[key].lower():
              print key + c[key]
        
            elif Surname == "":
              print key + c[key]
          
    elif eval(Company) == empty: 
      Position = raw_input("Position: ").lower()
      
      for p in Positions: #This leads to 'Surname' being requested 3 times after 'empty' x2!
        
        if eval(Position) == p:
          Surname = raw_input("Surname: ").lower()
      
          for key in p:
        
            if Surname == p[key].lower():
              print key + p[key]
          
            elif Surname == "":
              print key + p[key]
            
        elif eval(Position) == empty: 
          Surname = raw_input("Surname: ").lower()
        
          for key in p:
          
            if Surname == p[key].lower():
              print key + p[key]
            
            elif Surname == "":
              return "I can't help you if you don't give me any information."
          
    elif eval(Company) not in Companies:
      return "I'm afraid I don't know that company. Please restart and try again."

print Query()
